use std::str::FromStr;

grammar;

pub Expr = {
    <left:Expr> "+" <right:Factor> => left + right,
    <left:Expr> "-" <right:Factor> => left - right,
    Factor,
}

Factor = {
    <left:Factor> "*" <right:Term> => left * right,
    <left:Factor> "/" <right:Term> => left / right,
    Term,
}

Term = {
    Num,
    "(" <Term> ")",
};

Num: i32 = r"[0-9]+" => i32::from_str(<>).unwrap();
